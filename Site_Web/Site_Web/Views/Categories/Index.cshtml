@model IEnumerable<Site_Web.App_Data.CATEGORIE>

@{
    ViewBag.Title = "Index";
}
<section class="bg-fiche-unique">
    <h2>Liste de catégorie</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CAT_LIBELLE)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CAT_LIBELLE)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CAT_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CAT_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CAT_ID })
                </td>
            </tr>
        }

    </table>
</section>