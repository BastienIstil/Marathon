@model Site_Web.App_Data.INSCRIT

@{
    ViewBag.Title = "Login";
    ViewBag.user = Model;
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "Inscrits", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Login Failed, check details");
    <div>
        @if (Request.IsAuthenticated)
        {
            @Html.ActionLink("Sign Out", "Logout", "Inscrits", null, new { @class = "btn btn-primary" });
        }
        else
        {
            <fieldset>
                <legend>Login Form</legend>
                <div class="editor-label">@Html.LabelFor(u => u.INS_LOGIN)</div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.INS_LOGIN)
                    @Html.ValidationMessageFor(u => u.INS_LOGIN)
                </div>
                <div class="editor-label">@Html.LabelFor(u => u.INS_MDP)</div>

                <div class="editor-field">
                    @Html.PasswordFor(u => u.INS_MDP)

                    @Html.ValidationMessageFor(u => u.INS_MDP)
                </div>
                <input type="submit" value="Log In" />
            </fieldset>
            @Html.ActionLink("Register", "Register", "Inscrits", null, new { @class = "btn btn-primary" })
        }
    </div>
}