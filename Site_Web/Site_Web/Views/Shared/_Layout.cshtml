<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <section id="headerSite">
        <div id="logoMarathon">
        </div>
        <div id="blocConnexion">
            @Html.Action("_Login","Account")
        </div>
        <nav id="menuSite">
            <ul>
                <li class="menu1">
                    <a class="titre">Inscription</a>
                    <!-- Sous-Menu1 -->
                    <div class="ssMenu">
                        <ul>
                            <li>Teléchargement du formulaire</li>
                            <li>Inscription en ligne</li>
                        </ul>
                    </div>
                    <!-- Fin Sous Menu-->
                    <!-- le </li> et <li class="menu2"> sont collés pour éviter le problème du white space
                    quand elles sont en display:inline-block -->
                </li><li class="menu2">
                    <a class="titre">Courses</a>
                    <!-- Sous-Menu2 -->
                    <div class="ssMenu">
                        <ul>
                            <li>Liste des courses</li>
                        </ul>
                    </div>
                    <!-- Fin Sous Menu-->
                    <!-- le </li> et <li class="menu3"> sont collés pour éviter le problème du white space
                        quand elles sont en display:inline-block -->
                </li><li class="menu3">
                    <a class ="titre">Classement</a>
                    <!-- Sous-Menu3 -->
                    <div class="ssMenu">
                        <ul>
                            <li>Général</li>
                            <li>Par course</li>
                        </ul>
                    </div>
                    <!-- Fin Sous Menu-->
                </li>
            </ul>
        </nav>

    </section>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Marathon Annecy 2015</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
